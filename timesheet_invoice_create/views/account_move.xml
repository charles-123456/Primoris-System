<?xml version="1.0" encoding="utf-8" ?>
<odoo>
      <record id="timesheet_action_from_account_move" model="ir.actions.act_window">
        <field name="name">Timesheets</field>
        <field name="res_model">account.analytic.line</field>
        <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="domain">[('invoice_id','=',active_id)]</field>
        <field name="context">{}</field>
    </record>
    <record id="account_move_inherited" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//button[@name='open_reconcile_view']" position="after">
                           <button name="%(timesheet_invoice_create.timesheet_action_from_account_move)d" type="action" class="oe_stat_button" icon="fa-calendar"  attrs="{'invisible' : ['|',('timesheet_count_new', '=', 0),('state', '!=', 'draft')]}">
								<field name="timesheet_count_new" widget="statinfo" string="Timesheet" />
							</button>
                </xpath>
            </field>
    </record>
</odoo>