<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_analytic_line_inherited" model="ir.ui.view">
        <field name="name">account.analytic.line.inherit.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="invoice_id"/>
            </xpath>
        </field>
    </record>

       <record id="timesheet_view_inherited_search" model="ir.ui.view">
            <field name="name">account.analytic.line.search.inherited</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="sale_timesheet.timesheet_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='billable_timesheet']" position="replace">
                    <filter name="billable_timesheet" string="Billable" domain="[('invoice_id.state','=','draft')]"/>
                </xpath>
                <xpath expr="//filter[@name='non_billable_timesheet']" position="replace">
                    <filter name="non_billable_timesheet" string="Non Billable" domain="[('invoice_id','=',False)]"/>
                </xpath>
                <xpath expr="//filter[@name='billable_time']" position="replace">
                    <filter name="billable_time" string="Billed on Timesheets" domain="[('invoice_id.state', '=', 'posted')]"/>
                </xpath>
            </field>
    </record>

     <record id="hr_employee_new_inherited" model="ir.ui.view">
        <field name="name">hr.employee.inherited.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Schedule">
                            <!--<field name="resource_calendar_id"/>-->
                            <field name="tz"/>
                        </group>
                    </sheet>
                </form>
        </field>
    </record>

    <record id="hr_employee_new_inherited_tree" model="ir.ui.view">
        <field name="name">hr.employee.inherited.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
                <tree>
                        <field name="resource_calendar_id"/>
                        <field name="tz"/>
                </tree>
        </field>
    </record>

      <record model="ir.actions.act_window" id="access_hr_employee_new">
        <field name="name">Employee</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,form</field>
         <!--<field name="help" type="html">
         </field>-->
    </record>

    <menuitem id="employee_field_menu" name="Schedule" action="access_hr_employee_new"  parent="hr_timesheet.hr_timesheet_menu_configuration" sequence="101"></menuitem>
</odoo>