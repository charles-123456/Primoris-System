<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_timesheet_to_invoice" model="ir.ui.view">
		<field name="name">timesheet.to.invoice.form</field>
		<field name="model">timesheet.to.invoice</field>
		<field name="arch" type="xml">
			<form string="Create Invoices">
				Invoice Invidual Product<br></br>
				<group>
					<group>
						<field name="invoice_product_id"/>
					</group>
					<group>
						<field name="count" />
					</group>
					<group>
						<field name="journal_id"/>
					</group>
					<group>
						<field name="currency_id"/>
					</group>
					<group>
							<group>
								<field name="is_project"/>
								<field name="is_task"/>
								<field name="is_employee"/>
							</group>
					</group>
					<group>
						<group>
								<field name="is_description"/>
								<field name="is_hour"/>
								<field name="is_date"/>
							</group>
					</group>
				</group>
				<footer>
					<button name="create_invoice" string="Create" type="object" class="btn-primary"/>
					or
					<button string="Cancel" class="oe_highlight" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_timesheet_to_invoice" model="ir.actions.act_window">
		<field name="name">Create Invoice</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">timesheet.to.invoice</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="binding_model_id" ref="hr_timesheet.model_account_analytic_line" />
		<field name="binding_type">action</field>
		<field name="binding_view_types">list</field>
	</record>

</odoo>