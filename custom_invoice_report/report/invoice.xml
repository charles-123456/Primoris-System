<odoo>
    <record id="paperformat_invoice_report" model="report.paperformat">
			<field name="name">Invoice Report</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="page_height">0</field>
			<field name="page_width">0</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">15</field>
			<field name="margin_bottom">15</field>
			<field name="margin_left">10</field>
			<field name="margin_right">10</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">11</field>
			<field name="dpi">90</field>
		</record>

		<report id="report_invoice_report_base1" string="New Invoice"
			model="account.move"
			report_type="qweb-html"
			file="custom_invoice_report.report_invoice_report_base"
			name="custom_invoice_report.report_invoice_report_base"
			paperformat="paperformat_invoice_report"
		     />

</odoo>