<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_with_hours"
              inherit_id="account.report_invoice_document">

        <xpath expr="//p[@t-if='o.fiscal_position_id.note']" position="after">
            <t t-if="o.hour_summary_invoice">
                <table class="table table-condensed" style="font-size:120%;">
                    <tr>
                        <th>Summary Of Hours</th>
                    </tr>
                </table>
                <t t-foreach="o.lines_per_project()" t-as="g">
                    <table class="table table-striped table-condensed"
                           style="font-size:90%;">
                        <tr></tr>
                        <tr>
                            <th colspan="12">
                                <div class="pull-left">
                                    <div>Project:
                                        <t t-if="g['lines']"><t
                                                t-esc="g['lines'].project_id.name"/>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                        </t>
                                        Issue:
                                        <t t-esc="g['lines'].name"/>
                                    </div>
                                </div>
<!--
                                <div class="pull-right">
                                    <span class="text-right">State:
                                        <t t-if="g['category']">
                                            <t t-esc="g['lines'].stage_id.state"/>
                                        </t>
                                    </span>
                                </div>
-->
                            </th>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <t t-if="o.personal_info">
                                <th>Employee</th>
                            </t>
                            <th>Work description</th>
                            <th>Hours</th>
                            <th class="text-right">Invoiceable %</th>
                            <th class="text-right">Invoiceable hours</th>
                        </tr>
                        <tr t-foreach="g['lines']" t-as="l">
                            <td>
                                <span t-esc="l.date"/>
                            </td>
                            <t t-if=" o.personal_info">
                                <td>
                                    <span t-esc="l.timesheet_ids.employee_id.name"/>
                                </td>
                            </t>
                            <td>
                                <span t-esc="l.name"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="l.unit_amount"/>
                            </td>
                           <!-- <td class="text-right">
                                <span t-esc="l.to_invoice.display_name"/>
                            </td>-->
                            <td class="text-right">
                               <!-- <span t-esc="l.unit_amount - (l.to_invoice.factor/ 100.0 * l.unit_amount) "/>-->
                            </td>
                        </tr>
                    </table>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
